<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.webmobril.badoli">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning,InnerclassSeparator"
        tools:targetApi="m">

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <activity
            android:name=".activities.HomePageActivites.AgentActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.WithHeadPurple"
            android:windowSoftInputMode="stateHidden"/>

        <activity
            android:name=".activities.HomePageActivites.MerchantActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.WithHead"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activities.NavigationActivities.Support_Activity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.WithHeadOrange"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activities.NavigationActivities.WalletActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.WithHead"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activities.NavigationActivities.AboutUsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.WithHead"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activities.NavigationActivities.ChangePasswordActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.WithHead"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".activities.AccountActivities.SignUpActivity" />
        <activity android:name=".activities.AccountActivities.LoginActivity" />
        <activity
            android:name=".activities.HomePageActivites.PaymentSuccess"
            android:theme="@style/payuphone" />
        <activity
            android:name=".activities.HomePageActivites.ConfirmPayment"
            android:theme="@style/payuphone" />
        <activity
            android:name=".activities.HomePageActivites.EnterCodeActivity"
            android:theme="@style/payuphone" />
        <activity
            android:name=".activities.HomePageActivites.EnterAmountActivity"
            android:theme="@style/payuphone" />
        <activity
            android:name=".activities.HomePageActivites.RequestPayment"
            android:theme="@style/payuphone" />
        <activity
            android:name=".activities.HomePageActivites.PayByPhoneActivity"
            android:theme="@style/payuphone" />
        <activity
            android:name=".activities.HomePageActivites.PayuActivity"
            android:theme="@style/payuphone" />
        <activity android:name=".activities.HomePageActivites.HomePageActivity" />
        <activity
            android:name=".activities.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>