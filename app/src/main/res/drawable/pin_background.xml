<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Space contains text -->
    <item android:state_focused="true" android:state_checked="true">
        <shape
            android:shape="oval">
            <stroke
                android:width="@dimen/_1sdp"
                android:color="@color/purple" />
            <size
                android:width="@dimen/_30sdp"
                android:height="@dimen/_30sdp" />
        </shape>
    </item>
    <!--Space is the next space for character input -->
    <item android:state_focused="true" android:state_selected="true">
        <shape
            android:shape="oval">
            <stroke
                android:width="@dimen/_1sdp"
                android:color="@color/purple" />
            <size
                android:width="@dimen/_30sdp"
                android:height="@dimen/_30sdp" />
        </shape>
    </item>
    <!-- PinEntryEditText is focused -->
    <item android:state_focused="true">
        <shape
            android:shape="oval">
            <stroke
                android:width="@dimen/_1sdp"
                android:color="@color/white"/>
            <size
                android:width="@dimen/_30sdp"
                android:height="@dimen/_30sdp" />
            <solid android:color="@color/transparent"/>

        </shape>
    </item>
    <!-- PinEntryEditText is not focused -->
    <item>
        <shape
            android:shape="oval">
            <stroke
                android:width="@dimen/_1sdp"
                android:color="@color/white"/>
            <size
                android:width="@dimen/_30sdp"
                android:height="@dimen/_30sdp" />
            <solid android:color="@color/transparent"/>
        </shape>
    </item>
</selector>