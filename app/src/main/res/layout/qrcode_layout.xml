<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/rl_hidden_layout"
        android:layout_width="match_parent"
        android:background="@color/gray"
        android:visibility="gone"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_toolbar_qrcode"
            android:layout_width="match_parent"
            android:background="@color/dark_pink"
            android:layout_height="@dimen/_50sdp">

            <ImageView
                android:id="@+id/img_back_merchant"
                android:layout_width="@dimen/DP40"
                android:layout_height="@dimen/DP50"
                android:src="@drawable/arrow_back"
                android:background="@drawable/rl_back"
                android:layout_centerVertical="true"
                android:padding="@dimen/DP8"
                android:layout_marginStart="@dimen/DP10"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/img_back_merchant"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/txt_name_qrcode"
                android:textStyle="bold"
                android:textSize="@dimen/_20ssp"
                android:text="@string/app_name"
                android:gravity="center"
                android:padding="@dimen/_2sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/dark_pink"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/_18ssp"
                android:text="@string/scan_code"
                android:gravity="center"
                android:textColor="@color/white"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:background="@drawable/box"
                android:padding="@dimen/_5sdp"
                android:layout_margin="@dimen/_20sdp">

                <ImageView
                    android:id="@+id/img_qrcode"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="@dimen/_200sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/logo"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/txt_merchant_amt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/_16ssp"
                android:text="@string/app_name"
                android:gravity="center"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/txt_qrcode_timer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/_16ssp"
                android:text="@string/app_name"
                android:gravity="center"
                android:textColor="@color/white"/>


        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressbar_merchant"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_80sdp"
            android:visibility="gone"
            android:background="@color/gray"
            android:padding="@dimen/_10sdp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</layout>