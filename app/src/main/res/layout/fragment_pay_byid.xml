<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.core.widget.NestedScrollView
        android:orientation="vertical"
        android:isScrollContainer="true"
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:background="@color/white"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/DP25"
            android:background="@color/white">

            <TextView
                android:id="@+id/txt_merchant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/merch_id"
                android:textColor="@android:color/black"
                android:textSize="@dimen/SP25" />

            <LinearLayout
                android:id="@+id/edtext_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_merchant"
                android:padding="@dimen/DP15"
                android:gravity="center">

                <EditText
                    android:id="@+id/ed1"
                    android:layout_width="@dimen/DP45"
                    android:layout_height="@dimen/DP45"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/DP4"
                    android:background="@drawable/ed_circle"
                    android:gravity="center"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:inputType="number"
                    android:digits="0123456789"
                    tools:ignore="Autofill,LabelFor,TextFields" />

                <EditText
                    android:id="@+id/ed2"
                    android:layout_width="@dimen/DP45"
                    android:layout_height="@dimen/DP45"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/DP4"
                    android:background="@drawable/ed_circle"
                    android:gravity="center"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:inputType="number"
                    android:digits="0123456789"
                    tools:ignore="Autofill,LabelFor,TextFields"/>

                <EditText
                    android:id="@+id/ed3"
                    android:layout_width="@dimen/DP45"
                    android:layout_height="@dimen/DP45"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/DP4"
                    android:background="@drawable/ed_circle"
                    android:gravity="center"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:inputType="number"
                    android:digits="0123456789"
                    tools:ignore="Autofill,LabelFor,TextFields"/>

                <EditText
                    android:id="@+id/ed4"
                    android:layout_width="@dimen/DP45"
                    android:layout_height="@dimen/DP45"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/DP4"
                    android:background="@drawable/ed_circle"
                    android:gravity="center"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:inputType="number"
                    android:digits="0123456789"
                    tools:ignore="Autofill,LabelFor,TextFields"/>

                <EditText
                    android:id="@+id/ed5"
                    android:layout_width="@dimen/DP45"
                    android:layout_height="@dimen/DP45"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/DP4"
                    android:background="@drawable/ed_circle"
                    android:gravity="center"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:inputType="number"
                    android:digits="0123456789"
                    tools:ignore="Autofill,LabelFor,TextFields"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/or"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtext_layout"
                android:layout_centerInParent="true"
                android:src="@drawable/or"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:id="@+id/ln_mobile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/DP50"
                android:layout_marginLeft="@dimen/DP20"
                android:layout_marginRight="@dimen/DP20"
                android:weightSum="1"
                android:background="@drawable/ed_background"
                android:layout_below="@id/or">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.75"
                    android:gravity="center"
                    android:maxLength="7"
                    android:background="@drawable/rl_back"
                    android:textSize="@dimen/SP12"
                    android:text="@string/hint_country_code"/>

                <EditText
                    android:id="@+id/ed_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:background="@null"
                    android:singleLine="true"
                    android:inputType="phone"
                    android:maxLength="15"
                    android:imeOptions="actionDone"
                    android:drawableEnd="@drawable/ic_people_black_24dp"
                    android:hint="@string/merch_mob"
                    android:paddingLeft="@dimen/DP10"
                    android:paddingRight="@dimen/DP10"
                    tools:ignore="Autofill,TextFields" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ln_mobile"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/DP20"
                android:padding="@dimen/DP8"
                android:weightSum="1">

                <RelativeLayout
                    android:id="@+id/rl_back"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DP40"
                    android:background="@drawable/pink_circle_bg"
                    android:layout_weight="0.35">

                    <ImageView
                        android:id="@+id/arrowback"
                        android:layout_width="@dimen/DP25"
                        android:layout_height="@dimen/DP25"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/back"
                        android:paddingStart="@dimen/DP8"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/arrowback"
                        android:layout_alignParentEnd="true"
                        android:paddingEnd="@dimen/DP8"
                        android:gravity="center"
                        android:text="@string/go_back"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/dark_pink" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DP40"
                    android:background="@drawable/pink_circle_bg"
                    android:layout_marginRight="@dimen/DP15"
                    android:layout_marginLeft="@dimen/DP15"
                    android:layout_weight="0.35">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="@string/favories"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/dark_pink" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DP40"
                    android:background="@drawable/pink_circle_bg"
                    android:layout_weight="0.35">

                    <TextView
                        android:id="@+id/txt_next"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:text="@string/next"
                        android:paddingLeft="@dimen/DP8"
                        android:gravity="center_vertical"
                        android:layout_alignParentStart="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/dark_pink"/>

                    <ImageView
                        android:id="@+id/arrownext"
                        android:layout_width="@dimen/DP25"
                        android:layout_height="@dimen/DP25"
                        android:src="@drawable/right"
                        android:paddingRight="@dimen/DP8"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

             <!--   <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DP35"
                    android:background="@drawable/pink_circle_bg"
                    android:layout_weight="0.33">

                    <TextView
                        android:id="@+id/txt_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@+id/arrownext"
                        android:layout_centerVertical="true"
                        android:text="@string/next"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/dark_pink" />

                    <ImageView
                        android:id="@+id/arrownext"
                        android:layout_width="@dimen/DP25"
                        android:layout_height="@dimen/DP25"
                        android:layout_toEndOf="@id/txt_next"
                        android:src="@drawable/right" />

                </RelativeLayout>-->

            </LinearLayout>

        </RelativeLayout>


    </androidx.core.widget.NestedScrollView>

</layout>