<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".auth.login.LoginManagerActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:fillViewport="true"
            android:isScrollContainer="true">

            <LinearLayout
                android:id="@+id/lnImageDatail"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:weightSum="1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_weight="0.40"
                    android:layout_height="@dimen/_320sdp">

                    <pl.pzienowicz.autoscrollviewpager.AutoScrollViewPager
                        android:id="@+id/viewPager"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_320sdp"/>

                    <TextView
                        android:id="@+id/txtDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/set_up_your_bussiness"
                        android:gravity="center"
                        android:padding="@dimen/_6sdp"
                        android:layout_above="@+id/worm_dots_indicator"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13ssp" />

                    <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
                        android:id="@+id/worm_dots_indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:dotsColor="@color/white"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="@dimen/_10sdp"
                        app:dotsStrokeColor="@color/colorPrimary"
                        app:dotsCornerRadius="8dp"
                        app:dotsSize="16dp"
                        app:dotsSpacing="4dp"
                        app:dotsStrokeWidth="2dp"/>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/lnMerchant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        app:contentPadding="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardElevation="@dimen/_8sdp">

                        <include
                            android:id="@+id/layoutLogin"
                            layout="@layout/layout_login_user"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"/>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:id="@+id/ln_signup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/_25sdp"
                        android:padding="@dimen/_6sdp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/acc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dont_have_account"
                            android:gravity="center"
                            android:textColor="@color/text_orange"
                            android:textSize="@dimen/_13ssp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txtSignUp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/_6sdp"
                            android:text="@string/sign_up"
                            android:textStyle="bold"
                            android:textColor="@color/text_purple"
                            android:textSize="@dimen/_14ssp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnStaff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        app:contentPadding="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardElevation="@dimen/_8sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center_horizontal"
                                android:textSize="@dimen/_14ssp"
                                android:text="@string/enter_connection_code"/>

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/box_orange_border"
                                android:padding="@dimen/_8sdp"
                                android:hint="@string/hint_code"
                                android:textSize="@dimen/_14ssp"
                                android:textStyle="bold"
                                android:layout_margin="@dimen/_15sdp"
                                android:textColor="@color/colorPrimaryDark"/>

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/box_orange_border"
                                android:padding="@dimen/_8sdp"
                                android:hint="@string/enter_pin"
                                android:textSize="@dimen/_14ssp"
                                android:textStyle="bold"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:layout_marginRight="@dimen/_15sdp"
                                android:textColor="@color/colorPrimaryDark"/>

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/continu"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/rounded_button_orange"
                                android:textColor="@color/white"
                                android:textAllCaps="false"
                                android:textStyle="bold"
                                android:layout_margin="@dimen/_15sdp"
                                android:paddingLeft="@dimen/_15sdp"
                                android:paddingRight="@dimen/_15sdp"
                                android:textSize="@dimen/_14ssp"/>

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                </LinearLayout>



            </LinearLayout>

        </ScrollView>

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_margin="@dimen/_8sdp"
            android:src="@drawable/back"
            android:padding="@dimen/_6sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <include
            android:id="@+id/layoutProgress"
            layout="@layout/layout_progress"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
