<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.webmobril.badoli.com.webmobril.badoli.activities.HomePageActivites.RequestPayment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/header_pay"
            layout="@layout/header_layout" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="20dp">

                    <ImageView
                        android:id="@+id/banner_image"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@mipmap/banner" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:id="@+id/select_layout"
                        android:background="@drawable/purple_border"
                        android:layout_below="@id/banner_image"
                        android:layout_margin="20dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:id="@+id/select_qr_code"
                            android:background="@drawable/purple_round_left_layout"
                            android:layout_weight="1">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="QR Code"
                                android:id="@+id/qr_code_text"
                                android:textColor="@color/white"
                                android:layout_margin="7dp"
                                android:textAlignment="center"
                                android:gravity="center"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginRight="2dp"
                            android:id="@+id/select_mobile_id"
                            android:background="@drawable/purple_layout"
                            android:layout_weight="1">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mobile / ID"
                                android:id="@+id/mobile_id_text"
                                android:textColor="@color/white"
                                android:layout_margin="7dp"
                                android:textAlignment="center"
                                android:gravity="center"/>


                        </LinearLayout>







                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/layout_QR_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/select_layout"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/txt_enter_the_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="20dp"
                            android:text="Please enter the amount and click on Generate Code."
                            android:textSize="15sp" />



                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="vertical"
                            android:layout_below="@id/txt_enter_the_amount"
                            android:id="@+id/btn_amount"
                            android:background="@drawable/purple_border"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="(Amount) Fcfa"
                                android:textAllCaps="false"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_margin="10dp"
                                android:textColor="@color/text_orange"
                                android:textSize="18sp"
                                />


                        </androidx.appcompat.widget.LinearLayoutCompat>



                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/btn_generate_code"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_margin="30dp"
                            android:layout_below="@id/btn_amount"
                            android:background="@drawable/rounded_button">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Generate Code"
                                android:textColor="@color/white"
                                android:textSize="20sp" />
                        </androidx.appcompat.widget.LinearLayoutCompat>



                        <TextView
                            android:id="@+id/txt_generated_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/btn_generate_code"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="20dp"
                            android:text="One genertaed code wll expire in 2 minutes"
                            android:textSize="15sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layout_mobile_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_below="@id/select_layout">

                        <TextView
                            android:id="@+id/txt_merchant_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="20dp"
                            android:text="Merchad Id"
                            android:textSize="20sp" />

                        <LinearLayout
                            android:id="@+id/edtext_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txt_merchant_id"
                            android:layout_marginTop="20dp"
                            android:gravity="center">

                            <EditText
                                android:id="@+id/ed1"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_below="@+id/txt_merchant"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:layout_marginRight="8dp"
                                android:background="@drawable/ed_circle"
                                android:gravity="center"
                                android:maxLength="1"
                                android:singleLine="true" />

                            <EditText
                                android:id="@+id/ed2"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_below="@+id/txt_merchant"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:layout_marginRight="8dp"
                                android:background="@drawable/ed_circle"
                                android:gravity="center"
                                android:maxLength="1"
                                android:singleLine="true" />

                            <EditText
                                android:id="@+id/ed3"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_below="@+id/txt_merchant"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:layout_marginRight="8dp"
                                android:background="@drawable/ed_circle"
                                android:gravity="center"
                                android:maxLength="1"
                                android:singleLine="true" />

                            <EditText
                                android:id="@+id/ed4"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_below="@+id/txt_merchant"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:layout_marginRight="8dp"
                                android:background="@drawable/ed_circle"
                                android:gravity="center"
                                android:maxLength="1"
                                android:singleLine="true" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/or"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_below="@+id/edtext_layout"
                            android:layout_centerInParent="true"
                            android:src="@drawable/or" />

                        <TextView
                            android:id="@+id/txt_mobile_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/or"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="20dp"
                            android:text="Mobile Number"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/ed_mobile_number"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_below="@id/txt_mobile_number"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="14dp"
                            android:layout_marginRight="30dp"
                            android:background="@drawable/ed_background"
                            android:inputType="phone"
                            android:singleLine="true"
                            android:textColor="@color/text_orange"
                            android:textStyle="bold" />


                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="vertical"
                            android:layout_below="@id/ed_mobile_number"
                            android:id="@+id/btn_mobile_amount"
                            android:background="@drawable/purple_border"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="(Amount) Fcfa"
                                android:textAllCaps="false"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_margin="10dp"
                                android:textColor="@color/text_orange"
                                android:textSize="18sp"
                                />


                        </androidx.appcompat.widget.LinearLayoutCompat>


                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/btn_progress"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_margin="30dp"
                            android:layout_below="@id/btn_mobile_amount"
                            android:background="@drawable/rounded_button">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Progress"
                                android:textColor="@color/white"
                                android:textSize="20sp" />
                        </androidx.appcompat.widget.LinearLayoutCompat>


                    </RelativeLayout>
                </RelativeLayout>

            </LinearLayout>
        </ScrollView>


    </androidx.appcompat.widget.LinearLayoutCompat>


</layout>