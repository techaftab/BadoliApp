<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple"
        android:orientation="horizontal"
        android:weightSum="4"
        android:padding="8dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/home_view"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/home"
                android:id="@+id/home_view_ic"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:id="@+id/home_text"
                android:layout_gravity="center"
                android:layout_marginTop="7dp"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:gravity="center"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

       <androidx.appcompat.widget.LinearLayoutCompat
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/profile_view"
           android:layout_weight="1"
           android:orientation="vertical">

           <androidx.appcompat.widget.AppCompatImageView
               android:layout_width="20dp"
               android:layout_height="20dp"
               android:src="@mipmap/user_white"
               android:id="@+id/profile_view_ic"
                android:layout_gravity="center"
              />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:textSize="12sp"
               android:text="Profile"
               android:id="@+id/profile_text"
               android:textColor="@color/white"
               android:layout_marginTop="7dp"
               />
       </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/transaction_view">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/transaction"
                android:id="@+id/transaction_view_ic"
                android:layout_gravity="center"
               />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:text="Transactions"
                android:id="@+id/transaction_text"
                android:layout_gravity="center"
                android:layout_marginTop="7sp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:id="@+id/help_view">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/help"
                android:id="@+id/help_view_ic"
                android:layout_gravity="center"
               />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:id="@+id/help_text"
                android:layout_gravity="center"
                android:text="Help"
                android:layout_marginTop="7sp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>







    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>