<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:isScrollContainer="true">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="6"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/orange_layout"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/DP15"
                android:paddingRight="@dimen/DP15">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/acc_ic"
                    android:layout_width="@dimen/DP50"
                    android:layout_height="@dimen/DP50"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/DP15"
                    android:src="@mipmap/nav_user_icon" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/DP15"
                    android:paddingRight="@dimen/DP15"
                    android:layout_toEndOf="@+id/acc_ic"
                    android:text=""
                    android:textStyle="normal"
                    android:textColor="@color/white"
                    android:layout_toStartOf="@+id/img_fwd"
                    android:textSize="@dimen/SP20"
                    android:padding="@dimen/DP8"
                    tools:ignore="RelativeOverlap" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_fwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:padding="@dimen/DP8"
                    android:layout_centerVertical="true"
                    android:src="@drawable/arrow_forward" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/DP5"
                android:background="@color/purple" />

            <RelativeLayout
                android:id="@+id/open_wallet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rl_back"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/DP20"
                android:paddingRight="@dimen/DP20">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/wallet_ic"
                    android:layout_width="@dimen/DP50"
                    android:layout_height="@dimen/DP50"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/DP15"
                    android:layout_alignParentStart="true"
                    android:src="@mipmap/wallet_black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/DP15"
                    android:paddingRight="@dimen/DP15"
                    android:layout_marginStart="@dimen/DP10"
                    android:layout_toEndOf="@+id/wallet_ic"
                    android:layout_toStartOf="@+id/img_w"
                    android:text="@string/wallet"
                    android:onClick="onClick"
                    android:id="@+id/wallet_text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/SP16" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_w"
                    android:layout_width="@dimen/DP35"
                    android:layout_height="@dimen/DP35"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/DP8"
                    android:src="@mipmap/right_arrow_black" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/DP1"
                android:background="@color/grey" />

            <RelativeLayout
                android:id="@+id/about"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rl_back"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/DP20"
                android:paddingRight="@dimen/DP20">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/info_ic"
                    android:layout_width="@dimen/DP50"
                    android:layout_height="@dimen/DP50"
                    android:layout_marginStart="@dimen/DP15"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:src="@mipmap/info_black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/DP15"
                    android:paddingRight="@dimen/DP15"
                    android:layout_marginStart="@dimen/DP10"
                    android:layout_toEndOf="@+id/info_ic"
                    android:layout_toStartOf="@+id/img_ic"
                    android:text="@string/about"
                    android:id="@+id/about_text"
                    android:onClick="onClick"
                    android:textColor="@color/black"
                    android:textSize="@dimen/SP16" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_ic"
                    android:layout_width="@dimen/DP35"
                    android:layout_height="@dimen/DP35"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/DP8"
                    android:src="@mipmap/right_arrow_black" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey" />

            <RelativeLayout
                android:id="@+id/support"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/rl_back"
                android:paddingRight="@dimen/DP20"
                android:paddingLeft="@dimen/DP20">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/support_ic"
                    android:layout_width="@dimen/DP50"
                    android:layout_height="@dimen/DP50"
                    android:layout_marginStart="@dimen/DP15"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:src="@mipmap/support" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/DP15"
                    android:paddingRight="@dimen/DP15"
                    android:layout_marginStart="@dimen/DP10"
                    android:layout_toEndOf="@+id/support_ic"
                    android:layout_toStartOf="@+id/img_s"
                    android:text="@string/support"
                    android:id="@+id/support_text"
                    android:onClick="onClick"
                    android:textColor="@color/black"
                    android:textSize="@dimen/SP16" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_s"
                    android:layout_width="@dimen/DP35"
                    android:layout_height="@dimen/DP35"
                    android:padding="@dimen/DP8"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/right_arrow_black" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/DP1"
                android:background="@color/grey" />

            <RelativeLayout
                android:id="@+id/change_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/DP20"
                android:background="@drawable/rl_back"
                android:paddingRight="@dimen/DP20">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/_change_pass_ic"
                    android:layout_width="@dimen/DP50"
                    android:layout_height="@dimen/DP50"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/DP15"
                    android:src="@mipmap/change_password" />

                <TextView
                    android:id="@+id/change_password_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="0dp"
                    android:layout_toStartOf="@+id/img_c"
                    android:layout_toEndOf="@+id/_change_pass_ic"
                    android:paddingLeft="@dimen/DP15"
                    android:layout_centerVertical="true"
                    android:paddingRight="@dimen/DP15"
                    android:text="@string/chng_pwd"
                    android:textColor="@color/black"
                    android:textSize="@dimen/SP16" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_c"
                    android:layout_width="@dimen/DP35"
                    android:layout_height="@dimen/DP35"
                    android:padding="@dimen/DP8"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/right_arrow_black" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/DP1"
                android:background="@color/grey" />

            <RelativeLayout
                android:id="@+id/layout_logout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rl_back"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/DP20"
                android:paddingRight="@dimen/DP20">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/_logout_ic"
                    android:layout_width="@dimen/DP50"
                    android:layout_height="@dimen/DP50"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/DP15"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/sign_out" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/DP15"
                    android:paddingRight="@dimen/DP15"
                    android:layout_marginStart="@dimen/DP10"
                    android:layout_toEndOf="@+id/_logout_ic"
                    android:text="@string/logout"
                    android:onClick="onClick"
                    android:id="@+id/logout_text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/SP16" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/DP35"
                    android:layout_height="@dimen/DP35"
                    android:layout_alignParentEnd="true"
                    android:padding="@dimen/DP8"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/right_arrow_black" />

            </RelativeLayout>


        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>


</layout>