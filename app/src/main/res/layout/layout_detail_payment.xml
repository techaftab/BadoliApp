<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/rl_detail_payment"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:background="@color/white"
            android:fillViewport="true"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_30ssp"
                    android:text="@string/hint_amount"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="@dimen/_8sdp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_16ssp"
                    android:text="@string/payment_detail"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="0.50"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="@dimen/_8sdp"
                        android:textStyle="bold"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_16ssp"
                        android:text="@string/merchant_name"/>

                    <TextView
                        android:id="@+id/txt_merchant_name"
                        android:layout_width="match_parent"
                        android:layout_weight="0.50"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="@dimen/_8sdp"
                        android:textStyle="normal"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_16ssp"
                        android:text="@string/merchant_name"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="0.50"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="@dimen/_8sdp"
                        android:textStyle="bold"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_16ssp"
                        android:text="@string/merch_id"/>

                    <TextView
                        android:id="@+id/txt_merchant_id"
                        android:layout_width="match_parent"
                        android:layout_weight="0.50"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="@dimen/_8sdp"
                        android:textStyle="normal"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_16ssp"
                        android:text="@string/merch_id"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="0.50"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="@dimen/_8sdp"
                        android:textStyle="bold"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_16ssp"
                        android:text="@string/other_fees"/>

                    <TextView
                        android:id="@+id/txt_other_fees"
                        android:layout_width="match_parent"
                        android:layout_weight="0.50"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="@dimen/_8sdp"
                        android:textStyle="normal"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_16ssp"
                        android:text="@string/other_fees"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="0.50"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="@dimen/_8sdp"
                        android:textStyle="bold"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_16ssp"
                        android:text="@string/amount"/>

                    <TextView
                        android:id="@+id/txt_amount_detaisl"
                        android:layout_width="match_parent"
                        android:layout_weight="0.50"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="@dimen/_8sdp"
                        android:textStyle="normal"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_16ssp"
                        android:text="@string/amount"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="0.50"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="@dimen/_8sdp"
                        android:textStyle="bold"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_16ssp"
                        android:text="@string/total_amount"/>

                    <TextView
                        android:id="@+id/txt_total_amount_detail"
                        android:layout_width="match_parent"
                        android:layout_weight="0.50"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="@dimen/_8sdp"
                        android:textStyle="normal"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_16ssp"
                        android:text="@string/total_amount"/>

                </LinearLayout>

                <Button
                    android:id="@+id/btn_confirm_payment_details"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@drawable/rounded_button_darkpink"
                    android:paddingLeft="@dimen/_25sdp"
                    android:paddingRight="@dimen/_25sdp"
                    android:text="@string/confirm_payment"
                    android:textSize="@dimen/_16ssp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/_15sdp"/>

                <TextView
                    android:id="@+id/txt_goback_detail_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="@dimen/_12sdp"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16ssp"
                    android:text="@string/go_back"/>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</layout>
