<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/DP8"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_title_popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_10ssp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/_5sdp"
        android:text=""
        android:gravity="center"
        android:textAllCaps="false"
        android:textColor="@color/purple"/>

    <ImageView
        android:id="@+id/img_status_recharge"
        android:layout_width="@dimen/_60sdp"
        android:src="@drawable/success_pay"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/_6sdp"
        android:layout_height="@dimen/_60sdp" />

    <TextView
        android:id="@+id/txt_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textColor="@color/bla_trans"
        android:textSize="@dimen/_10ssp"
        android:padding="@dimen/_5sdp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textColor="@color/text_purple"
        android:text="@string/free_to_contact"
        android:textSize="@dimen/_10ssp"
        android:padding="@dimen/_4sdp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="0.50">

        <Button
            android:id="@+id/btn_okay"
            android:layout_width="0dp"
            android:layout_weight="0.50"
            android:layout_height="wrap_content"
            android:text="@string/close"
            android:textColor="@color/white"
            android:background="@drawable/rounded_button_orange"
            android:layout_margin="@dimen/_5sdp"
            tools:ignore="ButtonStyle" />

     <!--   <Button
            android:id="@+id/btn_recipt"
            android:layout_width="match_parent"
            android:layout_weight="0.50"
            android:layout_height="wrap_content"
            android:text="@string/reciept"
            android:textColor="@color/white"
            android:background="@color/green"
            android:layout_margin="@dimen/DP10"
            tools:ignore="ButtonStyle" />-->

    </LinearLayout>

</LinearLayout>